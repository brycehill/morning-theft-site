extends header
block body
  body(id=selectedLink)
    - var links = { home: '/', shows: '/shows', music: '/music', photos: '/photos'/*, connect: '/connect'*/ }
    header.navbar.navbar-static.navbar-static-top
      .container
        .navbar-header(role='navigation')
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span(class='sr-only') Toggle navigation
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
        div.navbar-collapse.collapse
          ul.social-icons.nav.navbar-nav.pull-right.hidden-xs
            li.twitter
              a(href='http://twitter.com/themorningtheft')
            li.facebook
              a(href='http://facebook.com/themorningtheft')

          ul.nav.navbar-nav.pull-right
            each link, item in links
              li(class=[selectedLink === item ? 'active' : '', item])
                a(href=link)=item.replace('_', ' ')

    .container
      .lrg-mast
        h1
          a(href='/') Morning Theft
      block content
  footer
  script(src='js/vendor.js')
  script(src='js/MorningTheft.min.js')
  script.
    MT.init();